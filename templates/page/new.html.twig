{% extends 'base.html.twig' %}

{% block title %}Créer une page{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Créer une nouvelle page</h3>
                </div>
                <div class="card-body">
                    {{ include('page/_form.html.twig', {'button_label': 'Créer'}) }}
                </div>
                <div class="card-footer text-end">
                    <a href="{{ path('app_page_index') }}" class="btn btn-secondary">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
