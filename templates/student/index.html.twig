{% extends 'base.html.twig' %}

{% block title %}Gestion des étudiants{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Gestion des étudiants</h1>

    <table class="datatable table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Promo</th>
                <th>Photo</th>
                <th>Entreprise</th>
                <th>Description</th>
                <th>Créé le</th>
                <th>Mis à jour le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.birthDay ? student.birthDay|date('Y-m-d') : '' }}</td>
                <td>{{ student.promo }}</td>
                <td>
                    {% if student.photo %}
                        <img src="{{ asset('uploads/photos/' ~ student.photo) }}" style="width: 100px; height: auto;">
                    {% else %}
                        N/A
                    {% endif %}
                </td>
                <td>{{ student.company }}</td>
                <td>{{ student.description }}</td>
                <td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('app_student_show', {'id': student.id}) }}">Afficher</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('app_student_edit', {'id': student.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-end">
        <a class="btn btn-success" href="{{ path('app_student_new') }}">Créer un nouvel étudiant</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('.datatable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %}
