{% extends 'base.html.twig' %}

{% block title %}Liste des logs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des logs</h1>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Type d'action</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date enregistrement</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.id }}</td>
                        <td>{{ log.author }}</td>
                        <td>{{ log.actionType }}</td>
                        <td>{{ log.description }}</td>
                        <td>{{ log.createdAt ? log.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_log_show', {'id': log.id}) }}" class="btn btn-info btn-sm">Détail</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun résultat</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
